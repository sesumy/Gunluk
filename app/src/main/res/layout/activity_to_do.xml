<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
              android:background="@android:color/holo_red_light"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:padding="6dip" >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.12"
            android:text="@string/service_title"
            android:background="@android:color/holo_red_light"
            tools:ignore="RtlHardcoded"/>

        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            style="@style/Widget.AppCompat.ProgressBar"
            android:background="@color/com_facebook_likeview_text_color"/>
    </LinearLayout>

    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@android:color/holo_red_light"
         android:padding="6dip"
         android:orientation="vertical"
         android:weightSum="1">

        <EditText
            android:id="@+id/textNewToDo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f8eff8f3"
            android:hint="Mesaj Başlığı"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/com_facebook_button_background_color_pressed"
            tools:ignore="HardcodedText">

            <requestFocus />
       </EditText>

        <Spinner
             android:id="@+id/spinner"
             android:drawSelectorOnTop="true"
             android:background="@drawable/background"
             android:layout_marginTop="10dp"
             android:layout_width="match_parent"
             android:layout_height="36dp"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_weight="0.53"/>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="208dp"
             android:background="#F33014"

             >

             <ImageView
                 android:id="@+id/diaryImage"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentBottom="true"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginBottom="10dp"
                 android:alpha="0.7"
                 tools:ignore="ContentDescription,RtlHardcoded"
                 android:contentDescription=""/>

             <EditText
                 android:id="@+id/diary"
                 android:layout_width="match_parent"
                 android:background="#f8eff8f3"
                 android:gravity="top"
                 android:focusable="true"
                 android:hint="@string/mesaj"
                 android:padding="16dp"
                 android:layout_height="200dp"
                 android:textColor="@color/com_facebook_button_background_color_pressed"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true"
                 tools:ignore="RtlHardcoded"/>
         </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/imageUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Resim Yükle"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/buttonAddToDo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/kaydet"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:onClick="addItem"/>

    <TextView
        android:text="@string/stextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"/>
</LinearLayout>