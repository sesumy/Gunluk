<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_diary_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gunluk.activities.DiaryDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText"
            android:weightSum="1">

            <ImageView
                android:layout_width="130dp"
                app:srcCompat="@drawable/love"
                android:id="@+id/statusImage"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="120dp"
                android:layout_height="60dp"
                tools:ignore="ContentDescription,ObsoleteLayoutParam,RtlHardcoded"/>

            <TextView
                android:text="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diaryTitleTextView"
                tools:ignore="HardcodedText"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="14sp"
                android:textColor="@android:color/holo_purple"
                android:textStyle="normal|bold"
                android:textAlignment="center"/>

            <TextView
                android:text="Date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/diaryDateTextView"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/diaryTextView"
                android:layout_toStartOf="@+id/statusImage"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,SmallSp"
                android:textColor="@color/com_facebook_blue"
                android:textSize="10sp"
                android:textStyle="normal|italic"
                android:textAlignment="center"
                android:layout_weight="0.35"/>

            <TextView
                android:text="@string/diary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diaryTextView"
                android:layout_toStartOf="@+id/statusImage"
                android:layout_marginTop="12dp"
                tools:ignore="ObsoleteLayoutParam"
                android:textSize="18sp"
                android:textColor="@android:color/holo_blue_light"
                android:textAlignment="viewStart"
                android:layout_weight="0.70"/>

            <ImageView
                app:srcCompat="@drawable/girl_avatar"
                android:layout_marginTop="42dp"
                android:layout_width="337dp"
                android:layout_below="@+id/diaryDateTextView"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription,InefficientWeight,ObsoleteLayoutParam,RtlHardcoded"
                android:id="@+id/diaryImageView"
                android:layout_weight="2.86"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
